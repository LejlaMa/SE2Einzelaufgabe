<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

       <EditText
           android:id="@+id/input"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="46dp"
           android:layout_marginLeft="46dp"
           android:layout_marginTop="136dp"
           android:layout_marginEnd="47dp"
           android:layout_marginRight="47dp"
           android:layout_marginBottom="550dp"
           android:hint="Geben Sie hier Ihre Matrikelnummer ein"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:inputType="number"/>

       <TextView
           android:id="@+id/response"
           android:layout_width="211dp"
           android:layout_height="134dp"
           android:layout_marginStart="144dp"
           android:layout_marginLeft="144dp"
           android:layout_marginTop="100dp"
           android:layout_marginEnd="267dp"
           android:layout_marginRight="267dp"
           app:layout_constraintBottom_toTopOf="@+id/sendBtn"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.208"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/input"
           app:layout_constraintVertical_bias="0.504"
           android:textColor="#000"
           android:gravity="center"
           android:textSize="18dp"/>

       <Button
           android:id="@+id/sendBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="162dp"
           android:layout_marginLeft="162dp"
           android:layout_marginTop="75dp"
           android:layout_marginEnd="162dp"
           android:layout_marginRight="162dp"
           android:onClick="sendOnCLick"
           android:text="Abschicken"
           app:layout_constraintBottom_toTopOf="@+id/calcBtn"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/response" />

       <Button
           android:id="@+id/calcBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="161dp"
           android:layout_marginLeft="161dp"
           android:layout_marginTop="40dp"
           android:layout_marginEnd="162dp"
           android:layout_marginRight="162dp"
           android:layout_marginBottom="161dp"
           android:onClick="buttonOnClick"
           android:text="Berechnen"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/sendBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>